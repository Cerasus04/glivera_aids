mixin slider(data)
	ul.slider_section.accordion
		each item in data.items
			li.slider_section__item.accordion__tab
				.slider_section__slide(style=`background-image: url(${item.slide})`).accordion__button
					.slider_section__descr
						h2.slider_section__descr_title= item.title
						p.slider_section__descr_text= item.descr
						a(href='#').slider_section__link
							+icon('arrow_lg')
