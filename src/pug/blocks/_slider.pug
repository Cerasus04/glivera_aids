mixin slider(data)
	ul.slider_section.accordion
		each item in data.items
			li.slider_section__item.accordion__tab
				.slider_section__slide.accordion__button
					+picture({img: item.bg,
					customClass: item.imgClass})
					.slider_section__descr
						.slider_section__descr_title= item.title
						p.slider_section__descr_text= item.descr
						a(href='#').slider_section__link
							+icon('arrow_lg')
